{% extends 'NmkdMainBundle::main.html.twig' %}

{% block body %}


    {% block hint %}
        <div class="nmkd-hint">
            {% block hintText %}
            {% endblock hintText %}
        </div>
    {% endblock hint %}

    {% block mainForm %}
    {% endblock mainForm %}


    {% block controls %}
        <div class="nmkd-controls">

            {% block prevBtn %}
                <button type="button" class="btn btn-default" onclick="document.location.href = '/';">
                    <span class="glyphicon glyphicon-circle-arrow-left"></span> Повернутись
                </button>
            {% endblock prevBtn %}

            {% block saveSessionBtn %}
                <button type="button" class="btn btn-default" onclick="document.location.href = '/save-session';">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Зберегти і вийти
                </button>
            {% endblock saveSessionBtn %}

            {% block nextBtn %}
                <div class="nmkd-next-btn">
                    <button type="button" class="btn btn-success" onclick="$('#input_form').submit()">
                        <span class="glyphicon glyphicon-circle-arrow-right"></span> Далі
                    </button>
                </div>
            {% endblock nextBtn %}

        </div>
    {% endblock controls %}


{% endblock body %}

