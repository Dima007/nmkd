<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>НМКД</title>
    <link href="{{ asset('bundles/nmkdmain/bootstrap/css/bootstrap.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/nmkdmain/bootstrap/css/bootstrap-responsive.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/nmkdmain/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/nmkdmain/css/colorpicker.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/nmkdmain/css/style.css') }}" rel="stylesheet" type="text/css">

    <script src="{{ asset('bundles/nmkdmain/js/jquery-2.0.2.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/nmkdmain/js/script.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/nmkdmain/bootstrap/js/bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/nmkdmain/js/colorpicker.js') }}" type="text/javascript"></script>

    {% block stylesheets %}{% endblock %}
    {% block scripts %}{% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
</head>
<body>

<div id="wrap">
    {% if app.user is not null and is_granted('ROLE_ADMIN') %}
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="brand">Administration</span>

                    {% set route = app.request.attributes.get('_route') %}
                    {% set class = 'class="active"' %}
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li {% if route == 'admin_homepage' %} {{ class|raw }} {% endif %}><a href="{{ path('admin_homepage') }}">Головна</a></li>
                            <li {% if route == 'admin_dic' %} {{ class|raw }} {% endif %}><a href="{{ path('admin_dic') }}">Дисципліни</a></li>
                            <li class="divider"></li>
                        </ul>
                        <ul class="nav nav-pills pull-right">
                            <li class="float_r"><a href="{{ path('logout') }}">Вийти</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container">

        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }} alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="clr"></div>

        {% block body %}

        {% endblock %}

    </div>
    <div id="push"></div>
</div>

<div id="footer">
    <div class="container">
        <p class="muted credit">&copy; 2014 NMKD </p>
    </div>
</div>

</body>
</html>